@model HRPortal.Mvc.DDMC_PFA.Models.PfaCycleEmpBatchViewModel

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "BatchForm";
}

<style>
    .form-horizontal .form-group {
        margin-right: -15px;
        margin-left: 5px;
    }
</style>

@using (Html.BeginForm("BatchQuery", "PfaCycleThirdEvaluation", FormMethod.Post, new { Id = "BatchForm" }))
{
    @Html.HiddenFor(x => x.PfaCycleID)
    @Html.HiddenFor(x => x.PfaOrgID)
    <div class="modal-dialog" style="width:1200px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">批次配比簽核</h4>
            </div>
            <div class="modal-body">
                <div>
                    <div class="search-container">
                        <div class="search-section">
                            <div class="form-group">
                                <label class="col-md-22" style="width:15%;">績效考核批號</label>
                                <div class="col-sm-44" style="width:30%;">
                                    @Html.DropDownList("ddlPfaFormNoList", (List<SelectListItem>)ViewBag.PfaFormNoList, new { @id = "ddlPfaFormNoList", @class = "form-control" })<br />
                                </div>
                                <label class="col-md-22" style="width:15%;">組織</label>
                                <div class="col-sm-44" style="width:30%;">
                                    @Html.DropDownList("ddlOrgSub", (List<SelectListItem>)ViewBag.OrgSubList, new { @id = "ddlOrgSub", @class = "form-control" })
                                </div>
                                <label class="col-md-22" style="width:15%;">排序</label>
                                <div class="col-sm-44" style="width:30%;align-items:start;">
                                    @Html.DropDownList("ddlSortSub", (List<SelectListItem>)ViewBag.SortSubList, new { @id = "ddlSortSub", @class = "form-control" })
                                </div>
                            </div>
                            <label class="col-md-22" style="width:15%;">按部門排序</label>
                            <div class="col-sm-44" style="width:30%;margin-top:8px;">
                                @if (ViewBag.txtDeptSortSub == "Y")
                                {
                                    <input type="checkbox" id="chkDeptSortSub" name="chkDeptSortSub" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" id="chkDeptSortSub" name="chkDeptSortSub" />
                                }
                            </div>
                        </div>
                        <div class="search-wrap" style="padding-top:10px">
                            <div class="col-xs-3" style="padding-left:0px">
                                <input id="btnSubQuery" style="width:100%" name="btnSubQuery" type="button" value="查詢" class="btn btn-info" />
                            </div>
                            @if (ViewBag.OrgSubList.Count > 0)
                            {
                                <div class="col-xs-3" style="padding-left:0px">
                                    <input id="btnSubClear" style="width:100%" name="btnSubClear" type="button" value="清除" class="btn btn-warning" />
                                </div>
                                <div class="col-xs-3" style="padding-left:0px">
                                    <button id="btnConfirm" name="@Url.Action("BatchConfirm")" type="button" class="btn btn-success" data-toggle="modal">儲存</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div>
                    @if (Model != null)
                    {
                        <div class="table-responsive" style="height:520px">
                            <table id="FormCheckTable" class="table-bordered ui-jqgrid" style="width:100%">
                                <tr role="row" class="ui-widget-content ui-row-ltr">
                                    <td colspan="5" id="divCheckData">
                                        <table id="tableCheckData" class="table-bordered ui-jqgrid" style="width:100%">
                                            <thead>
                                                <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777">
                                                    <th style="width:8%">
                                                        <div id="jqgh_grid-table_code" style="text-align:center;"></div>
                                                    </th>
                                                    <th style="width:8%">
                                                        <div id="jqgh_grid-table_code" style="text-align:center;">部門</div>
                                                    </th>
                                                    <th style="width:8%">
                                                        <div id="jqgh_grid-table_code" style="text-align:center;">應配比人數</div>
                                                    </th>
                                                    @if (Model.PfaCycleRationData.PfaPerformance.Count > 0)
                                                    {
                                                        foreach (var pfaPerformance in Model.PfaCycleRationData.PfaPerformance)
                                                        {
                                                            <th>
                                                                <div id="jqgh_grid-table_code" style="text-align:center;color:red;">
                                                                    @pfaPerformance.Name <br />
                                                                    @pfaPerformance.Scores <br />
                                                                    @pfaPerformance.Rates
                                                                    %
                                                                </div>
                                                            </th>
                                                        }
                                                    }
                                                    <th colspan="2" style="width:10%">
                                                        <div id="jqgh_grid-table_code" style="text-align:center;">配比正確</div>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyCheckData">
                                                @if (Model.PfaCycleRationData.PfaCycleRationDetail.Count() > 0)
                                                {
                                                    foreach (var itemDetail in Model.PfaCycleRationData.PfaCycleRationDetail)
                                                    {
                                                        <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr" id="@itemDetail.RowType">
                                                            <td role="gridcell" style="white-space:normal;text-align:center;" aria-describedby="grid-table_notification_count">
                                                                <span id="RowTypeName" name="RowTypeName">@itemDetail.RowTypeName</span>
                                                            </td>
                                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                                <span id="PfaDeptName" name="OrgTotal">@itemDetail.PfaDeptName</span>
                                                            </td>
                                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                                <span id="OrgTotal" name="OrgTotal">@itemDetail.OrgTotal</span>
                                                            </td>
                                                            @foreach (var number in itemDetail.Number)
                                                            {
                                                                <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count" id="@number.PfaPerformanceID" name="RationNumber">
                                                                    @if (itemDetail.RowType == "Calculat")
                                                                    {
                                                                        @Html.TextBox("RationNumber", number.Number, new { @class = "form-control calculatRationNumber", @type = "number", @min = "0" })
                                                                    }
                                                                    else
                                                                    {
                                                                        <span id="RationNumber" name="RationNumber">@number.Number</span>
                                                                    }
                                                                </td>
                                                            }
                                                            @if (itemDetail.RowType == "Calculat")
                                                            {
                                                                <td role="gridcell" style="white-space:normal;text-align:center;width:5%;" aria-describedby="grid-table_notification_count">
                                                                    <button type="button" id="btnCalculat" class="btn btn-primary">試算</button>
                                                                </td>
                                                                <td role="gridcell" style="white-space:normal;text-align:center;width:5%;" aria-describedby="grid-table_notification_count">
                                                                    <span id="CalculatIsRation" name="CalculatIsRation">@itemDetail.IsRation</span>
                                                                </td>
                                                            }
                                                            else if (itemDetail.RowType == "Last")
                                                            {
                                                                <td role="gridcell" style="white-space:normal;text-align:center;width:5%;" aria-describedby="grid-table_notification_count">
                                                                    <button type="button" id="btnChangeRation" class="btn btn-primary">更新配比</button>
                                                                </td>
                                                                <td role="gridcell" style="white-space:normal;text-align:center;width:5%;" aria-describedby="grid-table_notification_count">
                                                                    <span id="IsRation" name="IsRation">@itemDetail.IsRation</span>
                                                                </td>
                                                            }
                                                            else
                                                            {
                                                                <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count" colspan="2">
                                                                    <span id="IsRation" name="IsRation">@itemDetail.IsRation</span>
                                                                </td>
                                                            }
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </table>

                            <table tabindex="0" cellspacing="0" cellpadding="0" border="0" class="table-bordered ui-jqgrid ui-widget ui-widget-content ui-corner-all" style="height:50px;width:100%;margin-top:20px;">
                                <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777">
                                    <th style="width:5%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">
                                            <input type="checkbox" id="chkAll" name="chkAll" />
                                        </div>
                                    </th>
                                    <th style="width:10%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">績效考核批號</div>
                                    </th>
                                    <th style="width:12%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">組織</div>
                                    </th>
                                    <th style="width:12%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">部門</div>
                                    </th>
                                    <th style="width:8%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">員工編號</div>
                                    </th>
                                    <th style="width:10%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">員工姓名</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">自評</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">初核</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">複核</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">核決</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">評等</div>
                                    </th>
                                    <th style="width:6%">
                                        <div id="jqgh_grid-table_code" style="text-align:center;">簽核狀態</div>
                                    </th>
                                </tr>
                                @if (Model.PfaCycleEmp.Count() > 0)
                                {
                                    foreach (var item in Model.PfaCycleEmp)
                                    {
                                        <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr" id="@item.PfaSignProcessID">
                                            <td role="gridcell" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                                <div id="jqgh_grid-table_code" name="@item.EmployeeID" data="@item.EmployeeName" style="text-align:center;">
                                                    <input type="checkbox" id="chkData" name="chkData" />
                                                </div>
                                            </td>
                                            <td role="gridcell" style="white-space:normal; text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaFormNo)
                                            </td>
                                            <td role="gridcell" style="white-space:normal; text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaOrgName)
                                            </td>
                                            <td role="gridcell" style="white-space:normal; text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaDeptName)
                                            </td>
                                            <td role="gridcell" style="white-space:normal; text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.EmployeeNo)
                                            </td>
                                            <td role="gridcell" style="white-space:normal; text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.EmployeeName)
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaSelfScore)
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaFirstScore)
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.PfaLastScore)
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.TextBoxFor(modelItem => item.PfaFinalScore, new { @id = "lastScore", @class = "form-control", @type = "number", @min = "0" })
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.LastPerformanceName)
                                            </td>
                                            <td role="gridcell" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                                @Html.DisplayFor(modelItem => item.StrSignStatus)
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                                        <td colspan="13" style="text-align:center">
                                            @HRPortal.MultiLanguage.DDMC_PFA.Resource.NoData
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnClose</button>
            </div>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.txtOrgIDSub" name="txtOrgIDSub" id="txtOrgIDSub" />
    <input type="hidden" value="@ViewBag.txtSortSub" name="txtSortSub" id="txtSortSub" />
    <input type="hidden" value="@ViewBag.txtDeptSortSub" name="txtDeptSortSub" id="txtDeptSortSub" />
}
<script type="text/javascript">
    $(function () {
        var url = '@Url.Action("BatchQuery")';

        $("#ddlPfaFormNoList").change(function () {
            $("#PfaCycleID").val($("#ddlPfaFormNoList").val());
        });

        $("#ddlOrgSub").change(function () {
            $("#txtOrgIDSub").val($("#ddlOrgSub").val());
        });

        $("#ddlSortSub").change(function () {
            $("#txtSortSub").val($("#ddlSortSub").val());
        });

        $("#chkDeptSortSub").change(function () {
            if ($("#chkDeptSortSub").prop("checked")) {
                $("#txtDeptSortSub").val("Y");
            } else {
                $("#txtDeptSortSub").val("N");
            }
        });

        $("#chkAll").click(function () {
            $("input[type='checkbox'][name='chkData']").prop("checked", $(this).prop("checked"));
        });

        $(document).ready(function () {
            $("#Last").children().each(function () {
                $(this).attr("style", "white-space:normal;text-align:center;background-color:peachpuff");
            });
        });

        $("#btnSubQuery").click(function (event) {
            var pfaCycleId = $("#PfaCycleID").val();
            var sOrg = $("#txtOrgIDSub").val();
            var sSort = $("#txtSortSub").val();
            var sDept = $("#txtDeptSortSub").val();

            var href = url + "?cmdSub=Query" +
                "&pfaCycleId=" + pfaCycleId +
                "&txtOrgIDSub=" + sOrg +
                "&txtSortSub=" + sSort +
                "&txtDeptSortSub=" + sDept

            if (href != null) {
                $("#PfaSignProcessDialogContent").load(href);
            }
        });

        $("#btnSubClear").click(function (event) {
            var href = url + "?cmd=Clear";
            if (href != null) {
                $("#PfaSignProcessDialogContent").load(href);
            }
        });

        $("#FormCheckTable").delegate("button[id='btnCalculat']", "click", function () {
            var obj = new Object();
            obj.PfaCycleID = $("#PfaCycleID").val();
            obj.PfaOrgID = $("#PfaOrgID").val();
            obj.Number = [];
            $("#tbodyCheckData tr[id='Calculat'] td").each(function () {
                if ($(this).attr("name") == "RationNumber") {
                    var objDetail = new Object();
                    objDetail.PfaPerformanceID = $(this).attr("id");
                    objDetail.Number = $(this).find("input[id='RationNumber']").val();
                    obj.Number.push(objDetail);
                }
            });
            var jsonObj = { "model": obj };
            $.ajax({
                url: "@Url.Action("Calculation")",
                type: "POST",
                data: jsonObj,
                async: true,
                dataType: "json",
                success: function (result) {
                    if (result.success) {
                        $("#CalculatIsRation").text(result.data);
                        if (result.data != "Y") {
                            if (result.data == "N") {
                                showAlertMsg("提醒:等第配比試算結果不符");
                            } else {
                                showAlertMsg("分配人數要完整才能試算!");
                            }
                        } else {
                            showAlertMsg("等第配比試算正確");
                        }
                    } else {
                        showAlertMsg(result.message);
                    }
                }
            });
        });

        $("#FormCheckTable").delegate("button[id='btnChangeRation']", "click", function () {
            var obj = new Object();
            obj.PfaCycleID = $("#PfaCycleID").val();
            obj.PfaOrgID = $("#PfaOrgID").val();
            var objDetailList = [];
            $("input[type='checkbox'][name='chkData']").each(function () {
                var itemDetail = new Object();
                itemDetail.PfaCycleEmpName = $(this).parent("div").attr("data");
                itemDetail.PfaLastScore = $(this).parent("div").parent("td").parent("tr").find("input[id='lastScore']").val();
                objDetailList.push(itemDetail);
            });
            obj.PfaCycleEmp = objDetailList;

            if (objDetailList.length > 0) {
                var jsonObj = { "data": obj };
                $.ajax({
                    url: "@Url.Action("BathLastPerformanceRation")",
                    type: "POST",
                    data: jsonObj,
                    async: true,
                    dataType: "json",
                    success: function (result) {
                        if (result.success) {
                            $("#divCheckData").empty().append(result.data);
                            $("#Last").children().each(function () {
                                $(this).attr("style", "white-space:normal;text-align:center;background-color:peachpuff");
                            });
                            if (result.IsRation != "Y") {
                                if (result.IsRation == "N") {
                                    showAlertMsg("提醒: 等第配比試算結果尚大於人數");
                                }
                            }
                            $("#txtIsRation").val(result.IsRation);
                        } else {
                            showAlertMsg(result.message);
                        }
                    }
                });
            }
        });

        $("#btnConfirm").click(function () {
            var obj = new Object();
            obj.PfaCycleID = $("#PfaCycleID").val();
            obj.PfaOrgID = $("#PfaOrgID").val();
            var objDetailList = [];
            $("input[type='checkbox'][name='chkData']:checked").each(function () {
                var itemDetail = new Object();
                itemDetail.PfaSignProcessID = $(this).parent("div").parent("td").parent("tr").attr("id");
                itemDetail.EmployeeID = $(this).parent("div").attr("name");
                itemDetail.PfaFinalScore = $(this).parent("div").parent("td").parent("tr").find("input[id='lastScore']").val();
                objDetailList.push(itemDetail);
            });
            obj.PfaCycleEmp = objDetailList;

            if (objDetailList.length == 0) {
                showAlertMsg("請選擇要調整的員工資料");
                return false;
            }

            var jsonObj = { "model": obj };

            $.ajax({
                url: $(this).attr("name"),
                type: "POST",
                data: jsonObj,
                async: true,
                dataType: "json",
                success: function (result) {
                    var message = result.message;

                    showAlertMsg(message, function () {
                        if (result.success) {
                            $('#btnSubQuery').click();
                        }
                        setModalopen();
                    });
                }
            });
        });
    });
</script>