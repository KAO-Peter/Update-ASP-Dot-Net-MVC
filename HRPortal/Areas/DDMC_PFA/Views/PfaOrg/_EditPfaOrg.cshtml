@model HRPortal.Mvc.DDMC_PFA.Models.CreatePfaOrg

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "EditPfaOrg";
}
<style>
    .form-horizontal .form-group {
        margin-right: -15px;
        margin-left: 5px;
    }
</style>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">編輯</h4>
        </div>
        @using (Html.BeginForm("Edit", "PfaOrg", FormMethod.Post, new { @id = "EditPfaOrgForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ID)
            @Html.HiddenFor(x => x.CompanyID)
            @Html.HiddenFor(x => x.PfaOrgCode)
            <div class="modal-body">
                <div class="tab-content">
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">組織代碼</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.PfaOrgCode, new { @class = "form-control", @disabled = true })<br />
                            @Html.ValidationMessageFor(model => model.PfaOrgCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">組織名稱</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.PfaOrgName, new { @class = "form-control" })<br />
                            @Html.ValidationMessageFor(model => model.PfaOrgName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">考核簽核主管</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.OrgManagerName, new { @class = "form-control", @style = "width:77%", @disabled = true })
                            <button id="btnEmp" name="@Url.Action("Emp")" type="button" class="btn btn-primary" data-toggle="modal">查詢</button>
                            @Html.HiddenFor(model => model.OrgManagerId)<br />
                            @Html.ValidationMessageFor(model => model.OrgManagerId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-success"> @HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnSave</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>

<script type="text/javascript">

    $(function () {
        //工號小視窗
        $("#btnEmp").click(function () {
            var company = $("#CompanyID").val();
            $("#EmpDialogContent").load($(this).attr("name") + "?id=" + company, function () {
                $('#EmpDialog').modal({
                    backdrop: 'static',
                    keyboard: false
                }, 'show');
            });
        });

        $('#btnSave').click(function () {
            var form = $('#EditPfaOrgForm');
            var isValid = $(form).valid();

            if (isValid) {
                $.ajax({
                    url: $(form).attr("action"),
                    type: $(form).attr("method"),
                    data: $(form).serialize(),
                    success: function (result) {
                        var message = result.message;
                        showAlertMsg(message, function () {
                            if (result.success) {
                                $('#PfaOrgDialogDiv').modal('hide');
                                location.reload();
                            }
                        });
                    }
                });
            }
        });
    });
</script>
