@model HRPortal.Mvc.DDMC_PFA.Models.CreatePfaOrg

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "DetailPfaOrg";
}
<style>
    .form-horizontal .form-group {
        margin-right: -15px;
        margin-left: 5px;
    }
</style>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">明細</h4>
        </div>
        @using (Html.BeginForm("Detail", "PfaOrg", FormMethod.Post, new { @id = "DetailPfaOrgForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ID)
            <div class="modal-body">
                <div class="tab-content">
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">組織代碼</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.PfaOrgCode, new { @class = "form-control", @disabled = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">組織名稱</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.PfaOrgName, new { @class = "form-control", @disabled = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 20%;">考核簽核主管</label>
                        <div class="col-sm-44" style="width:79%">
                            @Html.TextBoxFor(model => model.OrgManagerName, new { @class = "form-control", @disabled = true })
                            @Html.HiddenFor(model => model.OrgManagerId)<br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>
