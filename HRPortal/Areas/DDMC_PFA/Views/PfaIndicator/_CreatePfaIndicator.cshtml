@model HRPortal.Mvc.DDMC_PFA.Models.PfaIndicatorCreateViewModel

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "CreatePfaIndicator";
}
<style>
    .form-horizontal .form-group {
        margin-right: -15px;
        margin-left: 5px;
    }
</style>
<div class="modal-dialog" style="width:1200px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">工作績效設定</h4>
        </div>
        @using (Html.BeginForm("Create", "PfaIndicator", FormMethod.Post, new { @id = "CreatePfaIndicatorForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="modal-body" style="height:500px; overflow-y:scroll">
                <div class="tab-content">
                    <div class="form-group">
                        <label class="col-md-22" style="width: 10%;">排序</label>
                        <div class="col-sm-44" style="width:23%">
                            @Html.TextBoxFor(model => model.Ordering, new { @class = "form-control" })<br />
                            @Html.ValidationMessageFor(model => model.Ordering, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 10%;">指標代碼</label>
                        <div class="col-sm-44" style="width:23%">
                            @Html.TextBoxFor(model => model.PfaIndicatorCode, new { @class = "form-control" })<br />
                            @Html.ValidationMessageFor(model => model.PfaIndicatorCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 10%;">指標名稱</label>
                        <div class="col-sm-44" style="width:23%">
                            @Html.TextBoxFor(model => model.PfaIndicatorName, new { @class = "form-control" })<br />
                            @Html.ValidationMessageFor(model => model.PfaIndicatorName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 10%;">權重</label>
                        <div class="col-sm-44" style="width:23%">
                            @Html.TextBoxFor(model => model.Scale, new { @class = "form-control" })<br />
                            @Html.ValidationMessageFor(model => model.Scale, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-22" style="width: 10%;">定義</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="tab-content">
                    <button type="button" class="btn btn-warning" style="margin-bottom: 10px;" id="btnAdd">新增</button>
                </div>
                <div class="tab-content">
                    <div class="table-responsive">
                        <table id="tableData" cellspacing="0" cellpadding="0" border="0" class="table table-bordered ui-jqgrid">
                            <thead>
                                <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777">
                                    <th style="width:80px"></th>
                                    <th style="width:80px">
                                        <div class="ui-jqgrid-sortable" style="text-align:center;">排序</div>
                                    </th>
                                    <th style="width:300px">
                                        <div class="ui-jqgrid-sortable" style="text-align:center;">程度說明</div>
                                    </th>
                                    <th style="width:60px">
                                        <div class="ui-jqgrid-sortable" style="text-align:center;">上限</div>
                                    </th>
                                    <th style="width:60px">
                                        <div class="ui-jqgrid-sortable" style="text-align:center;">下限</div>
                                    </th>
                                    <th style="width:80px"></th>
                                </tr>
                            </thead>
                            <tbody id="tbodyData"></tbody>
                            <tbody id="tbodyCopy" style="display:none">
                                <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                                    <td style="white-space:normal;text-align:center">
                                        <button type="button" class="btn btn-success" id="btnInsert">插入</button>
                                    </td>
                                    <td style="white-space:normal; text-align:center"></td>
                                    <td style="white-space:normal">
                                        @Html.TextBox("PfaIndicatorKey", "", new { @class = "form-control", @style = "width:70%" })
                                    </td>
                                    <td style="white-space:normal">
                                        @Html.TextBox("UpperLimit", "", new { @class = "form-control", @style = "width:70%" })
                                    </td>
                                    <td style="white-space:normal">
                                        @Html.TextBox("LowerLimit", "", new { @class = "form-control", @style = "width:70%" })
                                    </td>
                                    <td style="white-space:normal;text-align:center">
                                        <button type="button" class="btn btn-danger" id="btnDel">刪除</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-success"> @HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnSave</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.DDMC_PFA.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>

<script type="text/javascript">

    $(function () {
        var copyObj = $("#tbodyCopy tr");
        var idx = $("#tbodyData tr").length;

        //新增
        $("#btnAdd").click(function () {
            idx += 1;
            var item = $(copyObj).clone();
            $($(item).children("td")[1]).text(idx);
            $(item).appendTo("tbody[id='tbodyData']");
        });

        //插入
        $("#tbodyData").delegate("button[id='btnInsert']", "click", function () {
            var trObj = $(this).parent("td").parent("tr");
            $(trObj).after($(copyObj).clone());

            var nidx = 0;
            $("#tbodyData tr").each(function () {
                nidx += 1;
                $($(this).children("td")[1]).text(nidx);
            });
            idx = nidx;
        });

        //刪除
        $("#tbodyData").delegate("button[id='btnDel']", "click", function () {
            var trObj = $(this).parent("td").parent("tr");
            $(trObj).remove();

            var nidx = 0;
            $("#tbodyData tr").each(function () {
                nidx += 1;
                $($(this).children("td")[1]).text(nidx);
            });

            idx = nidx;
        });

        $('#btnSave').click(function () {
            var obj = new Object();

            obj.PfaIndicatorCode = $('#PfaIndicatorCode').val();
            obj.PfaIndicatorName = $('#PfaIndicatorName').val();
            obj.Description = $('#Description').val();
            obj.Scale = $('#Scale').val();
            obj.Ordering = $('#Ordering').val();

            if (obj.PfaIndicatorCode == "") {
                showAlertMessage("請選擇指標代碼代碼");
                return false;
            }
            if (isNaN(obj.Ordering)) {
                showAlertMessage("排序僅能輸入數字");
                return false;
            }

            var nidx = 0;
            var item = [];
            var error = false;
            $("#tbodyData tr").each(function () {
                item[nidx] = new Object();
                item[nidx].Ordering = nidx + 1;
                item[nidx].PfaIndicatorKey = $($(this).find("input[id='PfaIndicatorKey']")[0]).val();
                item[nidx].UpperLimit = $($(this).find("input[id='UpperLimit']")[0]).val();
                item[nidx].LowerLimit = $($(this).find("input[id='LowerLimit']")[0]).val();

                if (item[nidx].PfaIndicatorKey == "")
                {
                    showAlertMessage("請輸入程度說明");
                    $($(this).find("input[id='PfaIndicatorKey']")[0]).select();
                    error = true;
                    return false;
                }
                if (isNaN(item[nidx].UpperLimit)) {
                    showAlertMessage("上限僅能輸入數字");
                    $($(this).find("input[id='UpperLimit']")[0]).select();
                    error = true;
                    return false;
                }
                if (isNaN(item[nidx].LowerLimit)) {
                    showAlertMessage("下限僅能輸入數字");
                    $($(this).find("input[id='LowerLimit']")[0]).select();
                    error = true;
                    return false;
                }

                nidx += 1;
            });

            if (error == false)
            {
                if (nidx == 0) {
                    showAlertMessage("請輸入程度說明");
                    return false;
                }
                obj.Data = item;
                var jsonObj = { "obj": obj };
                $.ajax({
                    url: "PfaIndicator/Create",
                    type: "POST",
                    data: jsonObj,
                    async: true,
                    dataType: "json",
                    success: function (result) {
                        var message = result.message;
                        showAlertMsg(message, function () {
                            if (result.success) {
                                $('#PfaIndicatorDetailDialogDiv').modal('hide');
                                location.reload();
                            }
                        });
                    }
                });
            }
        });
    });
</script>