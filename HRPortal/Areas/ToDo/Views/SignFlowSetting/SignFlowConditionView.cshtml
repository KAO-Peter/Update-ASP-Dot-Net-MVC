@model List<HRPortal.Mvc.Models.SignFlowConditionViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
            $(function () {
                var message = @Html.Raw(Json.Encode(TempData["message"]));
                showAlertMessage(message);
            });
        </script>
    }

    <div>
        @Html.ActionLink(HRPortal.MultiLanguage.Resource.BackToSignFlowSetting, "Index")
    </div>
    <div class="h4">
        @HRPortal.MultiLanguage.Resource.EditSignFlowCondition
    </div>
    @*<table>
        <tr>
            <td class="" style="text-align:right;">@HRPortal.MultiLanguage.Resource.Company:</td>
            <td class="">@ViewBag.CompanyName</td>
        </tr>
        <tr>
            <td class="" style="text-align:right;">@HRPortal.MultiLanguage.Resource.Department:</td>
            <td class="">@ViewBag.DepartmentName</td>
        </tr>
        <tr>
            <td class="" style="text-align:right;">@HRPortal.MultiLanguage.Resource.FormType:</td>
            <td class="">@ViewBag.FormType</td>
        </tr>
    </table>
    <br/>*@
    <div class="col-md-7 col-sm-12 btn-toolbar action-buttons">
        <a class="btn btn-info" id="btnAddSignFlowItem" data-modal="" href="@Url.Action("AddSignFlowCondition", new{ designId = TempData["DesignID"] })">@HRPortal.MultiLanguage.Resource.BtnCreate</a>
    </div>

    <div class="col-xs-12">
        <div class="table-responsive">
            <table tabindex="0" cellspacing="0" cellpadding="0" border="0" class="table table-bordered ui-jqgrid ui-widget ui-widget-content ui-corner-all" style="height:50px;width:100%">
                <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777;">
                    <th class="col-xs-2" style="white-space:normal">
                        @HRPortal.MultiLanguage.Resource.FormSignLevelName
                    </th>
                    @if (ViewData["FormType"].ToString() == "Leave")
                    {
                        <th class="col-xs-2" style="white-space:normal">
                            @HRPortal.MultiLanguage.Resource.CategoryOfLeave
                        </th>
                    }
                    <th class="col-xs-2" style="white-space:normal">
                        @HRPortal.MultiLanguage.Resource.SignFlowConditionType
                    </th>
                    <th class="col-xs-2" style="white-space:normal">
                        @HRPortal.MultiLanguage.Resource.SignFlowConditionParameters
                    </th>
                    <th class="col-xs-2" style="white-space:normal">

                    </th>
                </tr>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                            <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                @Html.DisplayFor(modelItem => item.LevelName)
                            </td>
                            @if (ViewData["FormType"].ToString() == "Leave")
                            {
                                <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.AbsentName)
                                </td>
                            }
                            <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                @Html.DisplayFor(modelItem => item.ConditionDisplayName)
                            </td>
                            <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                @Html.DisplayFor(modelItem => item.Parameters)
                            </td>
                            <td style="white-space:normal;text-align:center;">
                                <a class="btn btn-warning" id="btnEdit@(item.ID)" data-modal="" href="@Url.Action("EditSignFlowCondition", new { conditionId = item.ID })" data-action="4">@HRPortal.MultiLanguage.Resource.BtnEdit</a>
                                <a class="btn btn-danger btn-delete" id="btnDelete@(item.ID)" href="@Url.Action("DeleteSignFlowCondition", new { conditionId = item.ID })" data-action="4">@HRPortal.MultiLanguage.Resource.BtnDelete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                        <td colspan="6" style="text-align:center">
                            @HRPortal.MultiLanguage.Resource.NoData
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div id='SignFlowConditionDiv' class='modal fade in' role="dialog">
        <div id='SignFlowConditionContent'></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(function () {
            //Popup
            $.ajaxSetup({ cache: false });
            $('a[data-modal]').click(function () {
                $('#SignFlowConditionContent').load(this.href, function () {
                    $('#SignFlowConditionDiv').modal({
                        backdrop: 'static',
                        keyboard: true
                    }, 'show');
                    bindForm(this, '#SignFlowConditionDiv', '#SignFlowConditionContent', true, window.location.href);
                });
                return false;
            });

            $('a.btn-delete').click(function () {
                $.ajax({
                    url: this.href,
                    type: 'POST',
                    success: function (result) {
                        if (result.status == 'success') {
                            window.location = window.location.href;
                            location.reload();
                        } else {
                            showAlertMessage(result.message);
                        }
                    }
                });
                return false;
            });
        });

    </script>
}
