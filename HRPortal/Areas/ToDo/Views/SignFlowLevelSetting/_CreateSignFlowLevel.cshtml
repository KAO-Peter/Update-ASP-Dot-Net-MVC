@model YoungCloud.SignFlow.Databases.UnitOfWorks.SignFlowLevel

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "CreateSignFlowLevel";
}
<style>
    .form-horizontal .form-group {
    margin-right: -15px;
    margin-left: 130px;
}

</style>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        $(function () {
            var message = @Html.Raw(Json.Encode(TempData["message"]));
            showAlertMessage(message);
        });
    </script>
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@HRPortal.MultiLanguage.Resource.SignFlowLevelCreateTitle</h4>
        </div>

        @using (Html.BeginForm("Create", "SignFlowLevelSetting", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            //hide data
            <div class="modal-body">
                <div class="tab-content">
                    <div class="form-group">
                        <label for="LevelID" class="col-md-22">@HRPortal.MultiLanguage.Resource.SignFlowLevelID</label>
                        <div class="col-sm-44" style="width:71.333333%">
                            @Html.EditorFor(model => model.LevelID, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-md-22">@HRPortal.MultiLanguage.Resource.SignFlowLevelName</label>
                        <div class="col-sm-44" style="width:71.333333%">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="@HRPortal.MultiLanguage.Resource.BtnSave" class="btn btn-success" />
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>

