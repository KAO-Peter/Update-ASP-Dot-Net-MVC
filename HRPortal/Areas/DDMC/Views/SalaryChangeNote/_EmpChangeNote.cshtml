            <td style="text-align: center; height: 30px; font-family: 標楷體;">@Model.BefJobTitle</td>
            <td style="text-align: center; height: 30px; font-family: 標楷體;" colspan="2">@Model.AftJobTitle</td>
        </tr>
        <tr>
            <td style="text-align: center; height: 30px; font-family: 標楷體;" colspan="2">職等</td>
            <td style="text-align: center; height: 30px; font-family: 標楷體;">@Model.BefGrade</td>
            <td style="text-align: center; height: 30px; font-family: 標楷體;" colspan="2">@Model.AftGrade</td>
        </tr>
   @*     <tr>
            <td style="text-align: center; height: 30px; font-family: 標楷體;" colspan="2">薪點</td>
