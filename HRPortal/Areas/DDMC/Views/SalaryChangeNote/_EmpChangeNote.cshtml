             {
            <td style="text-align: center; height: 30px; font-family: 標楷體;" rowspan="@MaxCount">薪津</td>
            <td style="text-align: center; height: 30px; font-family: 標楷體;">@Model.SalaryData[i].Name</td>
            <td style="text-align: right; height: 30px; font-family: 標楷體;">@Model.SalaryData[i].Salary_b 元</td>
            <td style="text-align: right; height: 30px; font-family: 標楷體;" colspan="2">@Model.SalaryData[i].Salary_a 元</td>
            }
            else if(i < Model.SalaryData.Count)
            {
            <td style="text-align: center; height: 30px; font-family: 標楷體;">@Model.SalaryData[i].Name</td>
