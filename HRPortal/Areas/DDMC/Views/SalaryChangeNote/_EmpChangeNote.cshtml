            <td style="text-align: center; height: 30px;" colspan="2">@Model.AftSalarybasis</td>
        </tr>*@
        @for (int i = 0; i < MaxCount; i++)
            {
        <tr>
            @if(i==MaxCount -1)
            {
            <td style="text-align: center; height: 30px; font-family: 標楷體;">合計</td>
            <td style="text-align: right; height: 30px; font-family: 標楷體;">@Model.BefTotalAmount 元<br />
                (未含獎金)</td>
            <td style="text-align: right; height: 30px; font-family: 標楷體;" colspan="2">@Model.AftTotalAmount 元<br />
                (未含獎金)</td>

