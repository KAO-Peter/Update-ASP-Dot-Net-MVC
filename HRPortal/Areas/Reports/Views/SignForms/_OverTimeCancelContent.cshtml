@model HRPortal.Mvc.Models.OverTimeCancelFormViewModel
<style>
     .form-control-static:before {
            content: "：";
            display: inline-block;
                  }
</style>
<div class="dl-info dl-horizontal">
    <label class="col-md-22" style="width: 17%;">申請人</label>
    <p class="form-control-static">@Model.SourceData.EmployeeName</p>
    <label class="col-md-22" style="width: 17%;">單位</label>
    <p class="form-control-static">@Model.SourceData.DepartmentName</p>
    <label class="col-md-22" style="width: 17%;">銷加班單申請日期</label>
    <p class="form-control-static">@Model.FormData.CreatedTime.ToString("yyyy/MM/dd")</p>
    <label class="col-md-22" style="width: 17%;">加班單申請日期</label>
    <p class="form-control-static">@Model.SourceData.CreatedTime.ToString("yyyy/MM/dd")</p>
    <label class="col-md-22" style="width: 17%;">起迄時間</label>
    <p class="form-control-static">@Model.SourceData.StartTime.ToString("yyyy/MM/dd HH:mm") <span>至</span> @Model.SourceData.EndTime.ToString("yyyy/MM/dd HH:mm")</p>
    <label class="col-md-22" style="width: 17%;">時數</label>
    <p class="form-control-static">@Model.SourceData.Amount.ToString("0.#")</p>
    <label class="col-md-22" style="width: 17%;">是否用餐</label>
    <p class="form-control-static">
        @if (Model.SourceData.HaveDining)
        {
            <span>是</span>
        }
        else
        {
            <span>否</span>
        }
    </p>
    @*<dt>補休或加班費</dt>
        <dd>
            @if (Model.Compensation== "0")
            {
                <span>加班費</span>
            }
            else
            {
                <span>補修</span>
            }
        </dd>*@
    <label class="col-md-22" style="width: 17%;">事由</label>
    <p class="form-control-static">@Model.SourceData.OverTimeReason</p>
    <label class="col-md-22" style="width: 17%;">銷加班單原因</label>
    <p class="form-control-static" style="word-break: break-all;">
        @Model.FormData.CancelReason
    </p>
</div>

@if (ViewBag.CanSign != null && ViewBag.CanSign == true)
{
    <script type="text/javascript">
        $("#btnSign").show();
        $("#btnReject").show();
        $("#SignInstruction").show();
        flagCanSign = true;
    </script>
}
else
{
    <script type="text/javascript">
        $("#btnSign").hide();
        $("#btnReject").hide();
        $("#SignInstruction").hide();
        flagCanSign = false;
    </script>
}

<script type="text/javascript">
    $(function () {
        $('#detailFormTypeName').html('銷加班單');
    })
</script>
