@model IEnumerable<HRPortal.Mvc.Models.ShowEmployeeIndex>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-info"   data-modal="" href="@Url.Action("Create", new { id = "btnCreate" })" data-action="4" style="margin-bottom: 10px;">@HRPortal.MultiLanguage.Resource.BtnCreate</a>

@using (Html.BeginForm("Index", "EmployeeInfoManage", FormMethod.Post, new { Id = "EmployeeInfoForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
            $(function () {
                var message = @Html.Raw(Json.Encode(TempData["message"]));
                showAlertMessage(message);
            });
        </script>
    }

     <div class=" row">
    <div class="search-container" style="margin-right: 13px; border-left-width: 5px; margin-left: 13px;">
    <div class="search-section">
        <div class="search-wrap">
            
          <div class="search-name" style="width: 280px;margin-top: -20px;">
            <div class="input-group col-xs-12">
                            <input id="txtkeyword" name="txtkeyword" type="text" class="form-control" value="@ViewBag.SearchENO" placeholder="請輸入工號或姓名">
                            <span class="input-group-btn">
                                <button id="btn_filter" class="btn btn-primary" type="button"><i class="fa fa-filter"></i></button>
                            </span>

        
                 
        </div>
              </div>
            </div>

          <div class="search-wrap">
            <div class="search-name">
                <label>公司</label>
            </div>
            <div class="search-input">
               @Html.DropDownList("CompanyListData", (IEnumerable<SelectListItem>)ViewData["CompanyList"], new { @class = "form-control", onchange = "ChangeStatus(this.form,this.options[this.selectedIndex].value,'#CompanyData');" })
            </div>
        </div>
         <div class="search-wrap">
            <div class="search-name">
                <label>部門</label>
            </div>
            <div class="search-input">
                @Html.DropDownList("DepartmentListData", (IEnumerable<SelectListItem>)ViewData["DepartmentList"], new { @class = "form-control", id = "DepartmentListData", onchange = "ChangeStatus(this.form,this.options[this.selectedIndex].value,'#SearchDepartmentData');" })
            </div>
        </div>
        
                            
        </div>
         <div class="search-wrap">
            
           
             <div class="col-xs-6" style="padding-left:0px">
                                <input id="btnQuery" style="width:100%" name="btnQuery" type="submit" value="查詢" class="btn btn-info" />
                            </div>
                            <div class="col-xs-6" style="padding-left:0px">
                                <input id="btnClear" style="width:100%" name="btnClear" type="submit" value="清除" class="btn btn-warning" />
                            </div>
                            
                               
        </div>
            </div>
         </div>
    <div class="col-xs-12">
        @if (Model != null)
        {
            <div class="table-responsive">
                <table tabindex="0" cellspacing="0" cellpadding="0" border="0" class="table-bordered ui-jqgrid ui-widget ui-widget-content ui-corner-all" style="height:50px;width:100%">
                    <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777">
                        <th class="" style="width:20%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">公司</div> 
                        </th>
                        <th class="" style="width:20%">
                            <div id="jqgh_grid-table_code" class="" style="text-align:center;">簽核部門</div> 
                        </th>
                        <th class="" style="width:10%">
                            <div id="jqgh_grid-table_code" class="" style="text-align:center;">工號</div> 
                        </th>
                        <th class="" style="width:10%">
                            <div id="jqgh_grid-table_code" class="" style="text-align:center;">姓名</div> 
                        </th>
                        <th style="width:10%">
                        </th>
                    </tr>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr" id="@item.ID">
                                <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.SignDepartmentName)
                                </td>
                                <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.EmployeeNO)
                                </td>
                                <td role="gridcell" class="" style="white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td role="gridcell" class="" style="white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                    <a class="btn btn-warning"  data-modal="" href="@Url.Action("Edit", new { id = item.ID })" data-action="4">@HRPortal.MultiLanguage.Resource.BtnEdit</a>
                                    </td>
</tr>
                        }
                    }
                    else
                    {
                        <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                            <td colspan="6" style="text-align:center">
                                @HRPortal.MultiLanguage.Resource.NoData
                            </td>
                        </tr>
                    }
                </table>
            </div>
                    <div style="text-align:center">
                        @* 在後面對pagelist做轉型 *@
                        @using PagedList
                        @using PagedList.Mvc
                        @{
                    var data = Model as IPagedList<HRPortal.Mvc.Models.ShowEmployeeIndex>
                        ;
                        }
                        @{
                    if (IsAjax)
                    { Layout = ""; }
                        }
                        @if (Model.Count() > 0)
                        {


                            @Html.PagedListPager(data, page => Url.Action("Index",
                                                      new { page, SearchDepartmentData = ViewBag.SearchDepartmentData, CompanyData = ViewBag.CompanyData, txtkeyword = ViewBag.SearchENO, SearchQueryTag = ViewBag.SearchQueryTag }), PagedListRenderOptions.ClassicPlusFirstAndLast)

                            @Html.PagedListPager(data, page => Url.Action("Index",
                                                  new { page, SearchDepartmentData = ViewBag.SearchDepartmentData, CompanyData = ViewBag.CompanyData, txtkeyword = ViewBag.SearchENO, SearchQueryTag = ViewBag.SearchQueryTag }), new PagedListRenderOptions
                                                  {
                                                      DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToLastPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToPreviousPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToNextPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToIndividualPages = false,
                                                      //LinkToFirstPageFormat = "<<第一頁",
                                                      //LinkToPreviousPageFormat = "<前一頁",
                                                      //LinkToNextPageFormat = "後一頁>",
                                                      //LinkToLastPageFormat = "最末頁>>",
                                                      DisplayPageCountAndCurrentLocation = true,
                                                      PageCountAndCurrentLocationFormat = @HRPortal.MultiLanguage.Resource.Pageof,
                                                      DisplayItemSliceAndTotal = true,
                                                      ItemSliceAndTotalFormat = @HRPortal.MultiLanguage.Resource.ofrow
                                                  })
                        }
                    </div>
        }
    </div>

    @*hidden 元素*@
    <input type="hidden" value="@ViewBag.CompanyData" name="CompanyData" id="CompanyData" />
    <input type="hidden" value="@ViewBag.SearchDepartmentData" name="SearchDepartmentData" id="SearchDepartmentData" />
    <input type="hidden" value="@ViewBag.SearchQueryTag" name="SearchQueryTag" id="SearchQueryTag" />
}

<div id='EmployeeInfoDialogDiv' class='modal fade in' role="dialog">
    <div id='EmployeeInfoDialogContent'></div>
</div>

@section Scripts {
    <script type="text/javascript">
        function ChangeStatus(form, fileId, formName) {
            $('#txtkeyword').val("");
            $(formName).val(fileId);
            if (formName == "#CompanyData" && fileId != null) {
                $.getJSON('@Url.Action("GetDepartment")', { CompanyId: fileId }, function (months) {
                    var monthsSelect = $('#DepartmentListData');
                    monthsSelect.empty();
                    $.each(months, function (index, month) {
                        monthsSelect.append($("<option></option>").val(month.Value).html(month.Text));
                    });
                });
            }
        }

        $(function () {
            //Optional: turn the chache off
            //Popup
            $.ajaxSetup({ cache: false });
            $('a[data-modal]').click(function () {
                $('#EmployeeInfoDialogContent').load(this.href, function () {
                    $('#EmployeeInfoDialogDiv').modal({
                        backdrop: 'static',
                        keyboard: true
                    }, 'show');
                    bindForm(this, '#EmployeeInfoDialogDiv', '#EmployeeInfoDialogContent', true, '@Url.Action("Index")');
                });
                return false;
            });

        });
   

        $('#btn_filter').click(function (event) {
            $('#EmployeeData').val("");
            var form = $('#EmployeeInfoForm');

            if ($('#txtkeyword').val()!="")
                form.submit();
            else
                showAlertMessage("請輸入工號或姓名");
        });

       
    </script>
}
