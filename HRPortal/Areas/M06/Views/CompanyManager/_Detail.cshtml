@model HRPortal.DBEntities.Company
@{
    ViewBag.Title = "Company Detail";
}
<style>
    .form-horizontal .form-group {
    margin-right: -15px;
    margin-left: 50px;
}
     .col-md-33 {
    color: #777;
    width: 100px;
    height: 15px;
    text-align: justify;
    -ms-text-justify: distribute;
    padding: 13px 0 8px 35px;
    float: left;
}
    .col-md-33:after {
    content: "";
    display: inline-block;
    width: 100%;
}
</style>
<div class="form-horizontal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@HRPortal.MultiLanguage.Resource.BtnDetail</h4>
        </div>
        @using (Html.BeginForm("Index", "CompanyManager", FormMethod.Post, new { Id = "EditCompanyManager" }))
        {
        <div class="modal-body">
            <div class="tab-content">
                <div class="form-group">
                    @Html.Label("公司代碼", new { @class = "col-md-33" })
                    <div class="col-sm-44" style="margin-top: 6px;">
                        @*@Html.DisplayFor(model => model.CompanyCode)*@
                        @Html.TextBoxFor(model => model.CompanyCode, new { @class = "form-control" , @readonly = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("公司名稱", new { @class = "col-md-33" })
                    <div class="col-sm-44" style="margin-top: 6px;">
                        @*@Html.DisplayFor(model => model.CompanyName)*@
                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" , @readonly = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("聯絡窗口", new { @class = "col-md-33" })
                    <div id="btnPersonalInfoUpdatee" class="col-sm-44" style="margin-top: 6px;width:60%">
                        @Html.TextBoxFor(model => model.ContactPrincipal, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.ContactPrincipal, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input id="btnPersonalInfoUpdate" type="submit" class="btn btn-success" value="@HRPortal.MultiLanguage.Resource.BtnSave" />
            <button type="button" class="btn btn-default" data-dismiss="modal">@HRPortal.MultiLanguage.Resource.BtnClose</button>
        </div>
        }
    </div>
</div>
<script>
    
    $('#btnPersonalInfoUpdate').click(function (event) {
        
        var form = $('#EditCompanyManager');
        form.submit(function (e) {
            e.preventDefault();
        });


        var submitData = new FormData(form[0]);
        
        $.ajax({
                    url: '@Url.Action("Update")',
                    type: 'POST',
                    data: submitData,
                    contentType: false,
                    processData: false,
                    dataType: 'html',
                    success: function (result) {
                        window.location.reload();
                    },                   
                });
     });
     </script>