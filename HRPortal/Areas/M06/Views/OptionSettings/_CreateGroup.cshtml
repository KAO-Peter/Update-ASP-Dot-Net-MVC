@model HRPortal.DBEntities.OptionGroup

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "CreateOptionGroup";
}
<style>
    .form-horizontal .form-group {
    margin-right: -15px;
    margin-left: 130px;
}
</style>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        $(function () {
            var message = @Html.Raw(Json.Encode(TempData["message"]));
            showAlertMessage(message);
        });
    </script>
}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@HRPortal.MultiLanguage.Resource.OpionGroupTitle</h4>
        </div>

        @using (Html.BeginForm("CreateGroup", "OptionSettings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            //hide data
            <div class="modal-body">
                <div class="tab-content">
                    <div class="form-group">
                        <label for="OptionGroupKey" class="col-md-22" style="width: 17%;">@HRPortal.MultiLanguage.Resource.OptionGroupKey</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.EditorFor(model => model.OptionGroupKey, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OptionGroupKey, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="OptionGroupKey" class="col-md-22" style="width: 17%;">@HRPortal.MultiLanguage.Resource.OptionGroupName</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.EditorFor(model => model.OptionGroupName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OptionGroupName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="@HRPortal.MultiLanguage.Resource.BtnSave" class="btn btn-success" />
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>