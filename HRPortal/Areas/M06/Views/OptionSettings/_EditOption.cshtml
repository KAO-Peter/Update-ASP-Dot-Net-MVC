@model HRPortal.DBEntities.Option

@Scripts.Render("~/bundles/validate")

@{
    ViewBag.Title = "EditOption";
}
<style>
    .form-horizontal .form-group {
    margin-right: -15px;
    margin-left: 130px;
}
</style>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        $(function () {
            var message = @Html.Raw(Json.Encode(TempData["message"]));
            showAlertMessage(message);
        });
    </script>
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@HRPortal.MultiLanguage.Resource.OpionTitle</h4>
        </div>

        @using (Html.BeginForm("SaveOption", "OptionSettings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            //hide data
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.OptionGroupID)
            @Html.HiddenFor(model => model.OptionGroup.OptionGroupKey, new { @id = "OptionItemGroupKey" })
            @*<input type='hidden' id='OptionGroupKey' value='@{Model.OptionGroup==null?"":Model.OptionGroup.OptionGroupKey;}'/>*@
                <div class="tab-content">
                    <div class="form-group">
                        <label for="Value" class="col-md-22" style="width: 17%;">@HRPortal.MultiLanguage.Resource.OptionValue</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.EditorFor(model => model.OptionValue, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OptionValue, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="DisplayResourceName" class="col-md-22" style="width: 17%;">@HRPortal.MultiLanguage.Resource.OptionResourceName</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.EditorFor(model => model.DisplayResourceName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DisplayResourceName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="DisplayName" class="col-md-22" style="width: 17%;">@HRPortal.MultiLanguage.Resource.OptionDisplayName</label>
                        <div class="col-sm-44" style="width:60%">
                            @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
                <input type="submit" value="@HRPortal.MultiLanguage.Resource.BtnSave" class="btn btn-success" />
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.Resource.BtnClose</button>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        if ($('#OptionItemGroupKey').val() == '') {
            $('#OptionItemGroupKey').val($('#CurrentOptionGroupKey').val())
        }
    });
</script>

