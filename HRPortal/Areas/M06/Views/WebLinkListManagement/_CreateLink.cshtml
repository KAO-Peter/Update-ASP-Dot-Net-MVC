@model HRPortal.Mvc.Models.HomeWebLinkModel

@Scripts.Render("~/bundles/validate")

@{
    Layout = null;
    ViewBag.Title = "CreateLink";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@HRPortal.MultiLanguage.Resource.CreateLink</h4>
        </div>
         @using (Html.BeginForm("Create", "WebLinkListManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="modal-body">
             <div class="tab-content">
                 <div class="form-group">
                        @Html.LabelFor(model => model.Number, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Number)
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                 <div class="form-group">
                        @Html.LabelFor(model => model.URL, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.URL)
                            @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                        </div>
                  </div>
                 <div class="form-group">
                        @Html.LabelFor(model => model.IsUsed, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8" style="margin-top:6px;">                         
                            @Html.RadioButtonFor(model => model.IsUsed, true, new { id = "haveSticky",Checked = "checked" })
                            @Html.Label("haveSticky", HRPortal.MultiLanguage.Resource.WebLinkListStatusShow)
                            @Html.RadioButtonFor(model => model.IsUsed, false, new { id = "nohaveSticky"})
                            @Html.Label("nohaveSticky", HRPortal.MultiLanguage.Resource.WebLinkListStatusHide)                           
                            @Html.ValidationMessageFor(model => model.IsUsed, "", new { @class = "text-danger" })
                        </div>
                  </div>
             </div>
        </div>
            <div class="modal-footer">
                <input type="submit" value="@HRPortal.MultiLanguage.Resource.BtnSave" class="btn btn-success" />
                <button type="button" class="btn btn-default" data-dismiss="modal"> @HRPortal.MultiLanguage.Resource.BtnClose</button>
            </div>
         }
    </div>
</div>