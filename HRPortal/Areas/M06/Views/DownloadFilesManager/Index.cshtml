@model IEnumerable<HRPortal.DBEntities.DownloadFile>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th {
        padding-left: 5px;
    }
</style>

@using (Html.BeginForm("Index", "DownloadFilesManager", FormMethod.Post, new { enctype = "multipart/form-data", id = "DownloadForm" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(true)*@
    <div class="row">
        @if (TempData["message"] != null)
        {
            <script type="text/javascript">
                $(function () {
                var message = @Html.Raw(Json.Encode(TempData["message"]));
                    showAlertMessage(message);
                });
            </script>
        }
        <div class="col-xs-12">
            <table class="table table-outline table-bordered fe-table">
                <tbody>
                    <tr>
                        <td>
                            <input type="file" name="UploadFilePath" style="width:100%" id="UploadFilePath" />
                        </td>
                        <td class="text-center" >
                            <a class="btn btn-info" id="btnCreate" style="width:70px" data-modal="" href="@Url.Action("Create")">@HRPortal.MultiLanguage.Resource.BtnCreate</a>
                        </td>
                        <td colspan="2">
                            <div class="input-group" style="width:100%">
                                <input id="txtkeyword" name="txtkeyword" type="text" class="form-control" value="@ViewBag.Keyword" placeholder="篩選名稱">
                                <span class="input-group-btn">
                                    <button id="btn_filter" onclick="ChangeStatus(this.form, 1, '#searchName')" class="btn btn-primary" type="button"><i class="fa fa-filter"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        
                    </tr>
                </tbody>
            </table>
        </div>

       @if (Model != null)
       {
        <div class="col-xs-12 ">
            <div class="table-responsive">
                <table class="table table-bordered ui-jqgrid ui-widget ui-widget-content ui-corner-all" style="height:50px;width:100%">
                    <tr class="ui-jqgrid-labels" role="rowheader" style="height:40px;color:#777">
                        <th class="" style="width:15%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().ModifiedTime)</div> 
                        </th>
                        <th class="" style="width:15%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</div> 
                        </th>
                        <th class="" style="width:25%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</div> 
                        </th>
                        <th class="" style="width:15%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().Format)</div> 
                        </th>
                        <th class="" style="width:5%">
                           <div id="jqgh_grid-table_code" class="" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().Size)</div> 
                        </th>
                        <th class="" style="width:15%">
                        </th>
                    </tr>
                    @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                            <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                                <td role="gridcell" class="" style="word-break: break-all;white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.ModifiedTime)
                                </td>
                                <td role="gridcell" class="" style="white-space:normal;word-break: break-all;" aria-describedby="grid-table_notification_count">
                                    <a target="_blank" href="@Url.Action("Download", new { filePath = item.Path, fileFormat = item.Format, fileName = item.OriginalName })"> @Html.DisplayFor(modelItem => item.Name) </a>
                                </td>
                                <td role="gridcell" class="" style="word-break: break-all;white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td role="gridcell" class="" style="word-break: break-all;white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.Format)
                                </td>
                                <td role="gridcell" class="" style="word-break: break-all;white-space:normal" aria-describedby="grid-table_notification_count">
                                    @Html.DisplayFor(modelItem => item.Size)
                                </td>
                                <td role="gridcell" class="" style="word-break: break-all;white-space:normal;text-align:center" aria-describedby="grid-table_notification_count">
                                    <a class="btn btn-warning" id="btnEdit@(item.Id)" data-modal="" href="@Url.Action("Edit", new { id = item.Id })" data-action="4">@HRPortal.MultiLanguage.Resource.BtnEdit</a>
                                    <input type="button" value="@HRPortal.MultiLanguage.Resource.BtnDelete" formnovalidate="formnovalidate" onclick="ChangeStatus(this.form,'@item.Id','#deletedId');" class="btn btn-danger" />

                                </td>
                            </tr>
                    }
                }
                else
                {
                        <tr role="row" tabindex="-1" class="ui-widget-content jqgrow ui-row-ltr">
                            <td colspan="6" style="text-align:center">
                                目前無資料
                            </td>
                        </tr>
                }
                </table>
            </div>
        </div>

            <div style="text-align:center">
                @* 在後面對pagelist做轉型 *@
                @using PagedList
                @using PagedList.Mvc
                @{
                    var data = Model as IPagedList<HRPortal.DBEntities.DownloadFile>;

                }
                @{
                    if (IsAjax)
                    { Layout = ""; }
                }
                @if (Model != null && Model.Count() > 0)
                {


                    @Html.PagedListPager(data, page => Url.Action("Index",
                                                      new { page, keyword = ViewBag.Keyword }), PagedListRenderOptions.ClassicPlusFirstAndLast)

                    @Html.PagedListPager(data, page => Url.Action("Index",
                                                  new { page, keyword = ViewBag.Keyword }), new PagedListRenderOptions
                                                  {
                                                      DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToLastPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToPreviousPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToNextPage = PagedListDisplayMode.Never,
                                                      DisplayLinkToIndividualPages = false,
                                                      //LinkToFirstPageFormat = "<<第一頁",
                                                      //LinkToPreviousPageFormat = "<前一頁",
                                                      //LinkToNextPageFormat = "後一頁>",
                                                      //LinkToLastPageFormat = "最末頁>>",
                                                      DisplayPageCountAndCurrentLocation = true,
                                                      PageCountAndCurrentLocationFormat = @HRPortal.MultiLanguage.Resource.Pageof,
                                                      DisplayItemSliceAndTotal = true,
                                                      ItemSliceAndTotalFormat = @HRPortal.MultiLanguage.Resource.ofrow
                                                  })
                }
            </div>
                    }
    </div>
        @*hidden 元素*@
                    <input type="hidden" value="0" name="deletedId" id="deletedId" />
                    <input type="hidden" value="0" name="searchName" id="searchName" />
                    }

<div id='DownloadFileDialogDiv' class='modal fade in' role="dialog">
    <div id='DownloadFileDialogContent'></div>
</div>



<script type="text/javascript">
    function ChangeStatus(form, fileId, formName) {
        //Submit data
        $(formName).val(fileId);
        form.submit();
    }

    $(function () {
        //Optional: turn the chache off
        //Popup
        $.ajaxSetup({ cache: false });
        $('a[data-modal]').click(function () {
            if (this.id == "btnCreate") {
                if ($('#UploadFilePath').val() == "") {
                    showAlertMessage("請選擇檔案");
                    return false;
                }

                //## 宣告一個FormData
                var data = new FormData();
                var urlPath = this.href;
                //## 將檔案append FormData
                var files = $("#UploadFilePath").get(0).files;
                if (files.length > 0) {
                    data.append("UploadedFile", files[0]);
                }

                $.ajax({
                    type: "POST",
                    url: "DownloadFilesManager/UploadFile/", // the URL of the controller action method
                    data: data, // optional data
                    contentType: false,
                    processData: false,
                    async: false,
                    success: function (result) {
                        if (result.fileOringinName != "")
                            onSuccess(urlPath + "?fileOringinName=" + result.fileOringinName + "&filePathName=" + result.filePathName + "&fileFormat=" + result.fileFormat + "&fileSize=" + result.fileSize);
                        else {
                            //console.log('Success');
                            showAlertMessage("上傳失敗!請重新上傳或洽詢管理員");
                            $('#UploadFilePath').val("");
                        }
                    },
                    error: function (req, status, error) {
                        // do something with error
                        showAlertMessage("上傳失敗!請重新上傳或洽詢管理員");

                        $('#UploadFilePath').val("");
                    }
                });
            }
            else {
                onSuccess(this.href);
            }
            return false;
        });

    });

    function onSuccess(path)
    {
        $('#UploadFilePath').val("");
        $('#DownloadFileDialogContent').load(path, function () {
            $('#DownloadFileDialogDiv').modal({
                backdrop: 'static',
                keyboard: true
            }, 'show');
            bindForm(this, '#DownloadFileDialogDiv', '#DownloadFileDialogContent', true);
        });
    }

</script>
