@model HRPortal.Mvc.Models.HomeViewModel
@{ Layout = null; }

@section header{
    @*@Scripts.Render("~/bundles/jquery2")*@

}
<style>
    span#ToDoListTotalCount {
        margin-right:0px;
    }
</style>
<div class="todo box col-xs-6" style="border: #5cb85c 1px solid;">
    <!--假單功能連結標題-->
    <ul>
        <li class="title col-xs-12" style="background-color: #5cb85c;">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>@HRPortal.MultiLanguage.Resource.LeaveApplication
        </li>
		<li class="blank col-xs-12"></li>
        @if (Model != null && Model.LeaveLinkList != null)
        {

            foreach (var item in Model.LeaveLinkList)
              {
                    <li class="list col-xs-12">
                        <a href="@item.URL">
			                <p class="col-xs-11">@item.Name</p>
			                
                        </a>
		            </li>
              }
        }
        <li class="bottom col-xs-12"></li>
    </ul>
</div>

