@model HRPortal.Mvc.Models.VacanciesViewModel

@{
    ViewBag.Title = "Vacancies Detail";
}

<div class="form-horizontal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
             <h4 class="modal-title">@Html.DisplayFor(model => model.Data.Title) - 詳細資料</h4>
        </div>
        <div class="modal-body">
            <div class="tab-content">
                <div class="form-group">
                    @*@Html.LabelFor(model => model.AnnouncementData.Createdby, new { @class = "col-md-2 control-label" })*@
                    @Html.Label("公告者", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10" style="margin-top: 6px;">
                        [@Model.Data.Employee.Department.DepartmentName]
                        @Html.DisplayFor(model => model.Data.Employee.EmployeeName)
                    </div>
                </div>
                <div class="form-group">
                   @* @Html.LabelFor(model => model.AnnouncementData.ModifiedTime, new { @class = "col-md-2 control-label" })*@
                    @Html.Label("發佈時間", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10" style="margin-top: 6px;">
                        @Html.DisplayFor(model => model.Data.ModifiedTime)
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.Label("內容", new { @class = "col-md-2 control-label" })
                    @*@Html.LabelFor(model => model.AnnouncementData.ContentText, new { @class = "col-md-2 control-label" })*@
                    <div class="col-md-10" style="margin-top: 6px;word-break: break-all;">
                        @Html.Raw(Model.Data.ContentText.Replace("\r\n", "<br/>"))
                    </div>
                </div>

               
                
            </div>
        </div>
        
        <div class="modal-footer">
           @*<input type="button" class="btn btn-default" value="我要推薦" onclick="location.href = '../Vacancies'" />*@
              <a class="btn btn-info" id="btnEnterFAQ" data-modal_1="" href="@Url.Action("AnswerFAQ", new { id = Model.Data.Id })">我要推薦</a>
            <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
        </div>
    </div>
</div>
<div id='ShowDetailDialogDiv' class='modal fade in' role="dialog">
    <div id='ShowDetailDialogContent'></div>
</div>

<script>
    //2017.03.17增加by Daniel，將內容附加<a>連結
    //注意：此Function會找出所有.modal-body .form-group label裡面，標題文字是"內容"的才會附加
    AddContentLink();
</script>
<script type="text/javascript">
    $(function () {
        //Optional: turn the chache off
        //Popup
        $.ajaxSetup({ cache: false });
        $('a[data-modal_1]').click(function () {
            $('#ShowDetailDialogContent').load(this.href, function () {
                $('#ShowDetailDialogDiv').modal({
                    backdrop: 'static',
                    keyboard: true
                }, 'show');
                bindForm(this, '#ShowDetailDialogDiv', '#ShowDetailDialogContent', true);
            });
            return false;
        });

    });
</script>

